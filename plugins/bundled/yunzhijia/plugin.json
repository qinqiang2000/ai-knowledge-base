{
  "id": "yunzhijia",
  "name": "Yunzhijia Channel",
  "version": "1.0.0",
  "description": "云之家群聊机器人集成",
  "type": "channel",
  "entry_point": "plugin:register",
  "config_schema": {
    "type": "object",
    "properties": {
      "session_timeout": {
        "type": "integer",
        "default": 3600,
        "description": "会话超时时间（秒）"
      },
      "default_skill": {
        "type": "string",
        "default": "customer-service",
        "description": "默认使用的 skill 名称"
      },
      "card_template_id": {
        "type": "string",
        "default": "",
        "description": "云之家图片卡片模板 ID"
      },
      "max_img_per_card": {
        "type": "integer",
        "default": 3,
        "description": "每个卡片最大图片数量"
      },
      "service_base_url": {
        "type": "string",
        "default": "http://localhost:9090",
        "description": "服务基础 URL（用于图片链接转换）"
      },
      "verbose": {
        "type": "boolean",
        "default": false,
        "description": "是否启用详细回复模式"
      }
    }
  }
}
